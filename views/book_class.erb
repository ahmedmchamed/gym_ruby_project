<form method="post" action="book/<%=@gymclass.id()%>">
    <div class="class-book_form">
        <label for="enter-first-name">First name</label>
        <input type="text" id="enter-first-name" name="first_name">
    </div>
    <div class="class-book-form">
        <label for="enter-last-name">Last name</label>
        <input type="text" id="enter-last-name" name="last_name">
    </div>
    <div class="class-book-form">
        <label for="enter-age">Age</label>
        <input type="number" id="enter-age" name="age">
    </div>
    <div class="class-book-form">
        <label for="enter-time">Available times</label>
        <select id="enter-time" name="hour">
            <option value="10">10:00</option>
            <option value="11">11:00</option>
            <option value="12">12:00</option>
            <option value="13">13:00</option>
        </select>
    </div>
    <div class="class-book-form">
        <label for="enter-date">Date</label>
        <input type="date" id="enter-date" name="date">
    </div>
    <div class="class-book-form">
        <input type="submit" value="BOOK"/>
    </div>
</form>